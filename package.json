{
  "name": "zotero-progress",
  "type": "module",
  "version": "0.1.1",
  "description": "Track reading progress by TOC chapters in Zotero",
  "config": {
    "addonName": "Zotero Progress",
    "addonID": "zotero-progress@kazusa",
    "addonRef": "zoteroprogress",
    "addonInstance": "ZoteroProgress",
    "prefsPrefix": "extensions.zotero.zoteroprogress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazusa3e/zotero-progress.git"
  },
  "author": "kazusa",
  "bugs": {
    "url": "https://github.com/kazusa3e/zotero-progress/issues"
  },
  "homepage": "https://github.com/kazusa3e/zotero-progress#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.2"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.3",
    "zotero-types": "^4.1.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
